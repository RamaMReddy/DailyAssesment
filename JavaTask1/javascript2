function printEquilateralPattern(rows) {
  let pattern = '';
  let space = rows - 1;
  let star = 1;

  for (let i = 0; i < rows; i++) {
    for (let j = 0; j < space; j++) {
      pattern += ' ';
    }

    for (let k = 0; k < star; k++) {
      pattern += '* ';
    }

    pattern += '\n';
    space--;
    star++;
  }

  return pattern;
}

// Usage
const equilateralPattern = printEquilateralPattern(15);
console.log(equilateralPattern);
